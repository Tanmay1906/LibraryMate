{
  "openapi": "3.0.0",
  "info": {
    "title": "Library Management API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "summary": "Login",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Login" } } } },
        "responses": { "200": { "description": "JWT token" } }
      }
    },
    "/api/auth/signup": {
      "post": {
        "summary": "Signup",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Signup" } } } },
        "responses": { "200": { "description": "User created" } }
      }
    },
    "/api/auth/send-otp": {
      "post": {
        "summary": "Send OTP",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/SendOTP" } } } },
        "responses": { "200": { "description": "OTP sent" } }
      }
    },
    "/api/auth/verify-otp": {
      "post": {
        "summary": "Verify OTP",
        "requestBody": { "required": true, "content": { "application/json": { "schema": { "$ref": "#/components/schemas/VerifyOTP" } } } },
        "responses": { "200": { "description": "OTP verified" } }
      }
    }
  },
  "components": {
    "schemas": {
      "Login": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" },
          "role": { "type": "string", "enum": ["admin", "student"] }
        }
      },
      "Signup": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "email": { "type": "string" },
          "phone": { "type": "string" },
          "password": { "type": "string" },
          "role": { "type": "string", "enum": ["admin", "student"] },
          "registration_number": { "type": "string" },
          "aadhar_reference": { "type": "string" }
        }
      },
      "SendOTP": {
        "type": "object",
        "properties": {
          "phone": { "type": "string" },
          "role": { "type": "string" }
        }
      },
      "VerifyOTP": {
        "type": "object",
        "properties": {
          "phone": { "type": "string" },
          "code": { "type": "string" }
        }
      }
    }
  }
}
