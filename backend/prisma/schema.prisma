generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  phone     String
  password  String
  libraries Library[]
}

model Library {
  id        String   @id @default(uuid())
  name      String
  location  String
  admin     Admin    @relation(fields: [adminId], references: [id])
  adminId   String
  books     Book[]
}

model Student {
  id                 String   @id @default(uuid())
  name               String
  registration_number String   @unique
  email              String   @unique
  phone              String
  aadhar_reference   String
  subscription_plan  String
  dues               Float    @default(0)
  password           String
  payments           Payment[]
  borrowHistory      Borrow_History[]
}

model Book {
  id         String   @id @default(uuid())
  title      String
  author     String
  category   String
  library    Library  @relation(fields: [libraryId], references: [id])
  libraryId  String
  borrowHistory Borrow_History[]
}

model Payment {
  id         String   @id @default(uuid())
  student    Student  @relation(fields: [studentId], references: [id])
  studentId  String
  amount     Float
  status     String
  due_date   DateTime
  paid_at    DateTime?
}

model Borrow_History {
  id         String   @id @default(uuid())
  student    Student  @relation(fields: [studentId], references: [id])
  studentId  String
  book       Book     @relation(fields: [bookId], references: [id])
  bookId     String
  borrow_date DateTime
  return_date DateTime?
}

model OTP {
  id         String   @id @default(uuid())
  phone      String
  code       String
  expires_at DateTime
  verified   Boolean  @default(false)
  role       String
}
